{
  "useTabs": false,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "**/*.svelte",
      "options": {
        "parser": "svelte",
        "svelteAllowShorthand": true
      }
    }
  ]
}
